@model WebRazorPages.Pages.Personel.IndexModel
@{
}
<form action="" method="post">
    <h4>Hesap Bilgileriniz</h4>
    <p>
        <label for="username">Kullanici Adi</label>
        <input asp-for="Personel.UserName">
        <span asp-validation-for="Personel.UserName" class="text-danger"></span>
    </p>
    <p>
        <label for="password">Password </label>
        <input asp-for="Personel.Password">
        <span asp-validation-for="Personel.Password" class="text-danger"></span>
    </p>
    <p>
        <label for="repassword">Re Password </label>
        <input asp-for="Personel.RePassword">
        <span asp-validation-for="Personel.RePassword" class="text-danger"></span>
    </p>
    <p>
        <label for="email">Email </label>
        <input asp-for="Personel.Email" placeholder="biris@gmail.com">
        <span asp-validation-for="Personel.Email" class="text-danger"></span>
    </p>
    <h4>Kisisel Bilgileriniz</h4>
    <p>
        <label for="ad">Adiniz</label>
        <input asp-for="Personel.Ad">
    </p>
    <p>
        <label for="soyad">Soyadiniz</label>
        <input asp-for="Personel.Soyad">
    </p>
    <p>
        <label for="tel">Gsm</label>
        <input asp-for="Personel.Phone">
        <span asp-validation-for="Personel.Phone" class="text-danger"></span>
    </p>



    <input type="hidden" name="id" id="id" value="5">
    <input type="submit" value="Kaydet">
    <button type="submit">Kaydet 2</button>
    <button type="reset">Reset</button>
</form>